<div class="relative overflow-x-auto">
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-100 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3 rounded-l-lg">
                    Events Information
                </th>
                <th scope="col" class="px-6 py-3"></th>
            </tr>
        </thead>
        <tbody>
            <tr class="bg-white dark:bg-gray-800 border-b-4">
                <th scope="row" class="px-6 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                    No of Ongoing Events
                </th>
                <td class="py-4">
                    <b>{{eventCount}}</b>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<section class="text-gray-600 body-font">
  <div class="container px-5 py-10 mx-auto">
    <div class="flex flex-wrap -m-4">
      {{#each event}}
        <div class="xl:w-1/4 md:w-1/2 p-4">
          <div class="bg-gray-100 p-6 rounded-lg">
            <img
              class="h-30 rounded w-full object-cover object-center mb-6"
              src="/uploads/{{imageUrl}}"
              alt="content"
            />
            <h3
              class="tracking-widest text-indigo-500 text-xs font-medium title-font"
            >{{date}}</h3>
            <h1
              class="text-lg text-gray-900 font-medium title-font mb-2"
            >{{mainHeading}}</h1>
            <h2
              class="text-lg text-gray-900 font-medium title-font mb-2"
            >{{subHeading}}</h2>
            <p class="leading-relaxed text-base">{{description}}</p>
             <div class="mt-6 grid grid-cols-2 gap-3">
            <form action="/faculty/edit-event/{{_id}}">
              <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">✏️ Edit</button>
            </form>
            <form action="/faculty/delete-event/{{_id}}" method="post">
              <button type="submit" class="focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900">Delete</button>
            </form>
          </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>