<style>
    input[type="search"] {
        padding: 3px 10px;
        margin-left: 10px;
        width: 225px;
        border: 2px solid gray;
        margin-top: 10px;
        margin-bottom: 20px;
        outline: none;
        border-radius: 12px;
    }
    .dataTables_length {
        display: none;
    }
    .dataTables_info {
        display: none;
    }
    #myTable_paginate {
        display: none;
    }
</style>
<div class="relative p-5 overflow-x-auto shadow-md sm:rounded-lg">
  <table
    id="myTable"
    class="w-full text-sm text-left text-gray-500 dark:text-gray-400"
  >
    <thead
      class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400"
    >
      <tr>
        <th scope="col" class="p-4">
          <div class="flex items-center">
            <input
              id="checkbox-all-search"
              type="checkbox"
              class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600"
            />
            <label for="checkbox-all-search" class="sr-only">checkbox</label>
          </div>
        </th>
        <th scope="col" class="px-6 py-3">
          Name
        </th>
        <th scope="col" class="px-6 py-3">
          Batch
        </th>
        <th scope="col" class="px-6 py-3">
          Year of Study
        </th>
        <th scope="col" class="px-6 py-3">
          Blood Group
        </th>
        <th scope="col" class="px-6 py-3">
          District
        </th>
        <th scope="col" class="px-6 py-3">
          Phone
        </th>
      </tr>
    </thead>
    <tbody>

      {{#each alumni}}

        <tr
          class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600"
        >
          <td class="w-4 p-4">
            <div class="flex items-center">
              <input
                id="checkbox-table-search-1"
                type="checkbox"
                class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600"
              />
              <label
                for="checkbox-table-search-1"
                class="sr-only"
              >checkbox</label>
            </div>
          </td>
          <th
            scope="row"
            class="flex items-center px-6 py-4 text-gray-900 whitespace-nowrap dark:text-white"
          >
            <img
              class="w-10 h-10 object-cover rounded-full"
              src="/uploads/{{imageUrl}}"
              alt="Avatar"
            />
            <div class="pl-3">
              <div class="text-base font-semibold">{{firstname}}
                {{lastname}}</div>
              <div class="font-normal text-gray-500">{{email}}</div>
            </div>
          </th>
          <td class="px-6 py-4">
            {{batch}}
          </td>
          <td class="px-6 py-4">
            <div class="flex items-center">
              {{startyear}}-{{endyear}}
            </div>
          </td>
          <td class="px-6 py-4">
            <div class="flex items-center">
              {{bloodgroup}}
            </div>
          </td>
          <td class="px-6 py-4">
            <div class="flex items-center">
              {{district}}
            </div>
          </td>
          <td class="px-6 py-4">
            <div class="flex items-center text-blue-900">
              <a href="tel:{{phone}}">{{phone}}</a>
            </div>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  <div class="">
    <button
    onclick="printScreen()"
      type="button"
      class="mt-6 text-white bg-gray-600 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm font-semibold px-5 py-2.5 mr-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700 dark:border-gray-700"
    >Export as PDF</button>
  </div>
</div>

<script
  src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js"
  integrity="sha512-pumBsjNRGGqkPzKHndZMaAG+bir374sORyzM3uulLV14lN5LyykqNk8eEeUlUkB3U0M4FApyaHraT65ihJhDpQ=="
  crossorigin="anonymous"
  referrerpolicy="no-referrer"
></script>
<script
  src="https://cdn.datatables.net/1.13.3/js/jquery.dataTables.js"
></script>

<script>
  $(document).ready( function () { $('#myTable').DataTable(); } );
  
  function printScreen() {
    window.print()
  }
</script>