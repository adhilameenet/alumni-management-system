<div class="relative overflow-x-auto">
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400 mb-3">
        <thead class="text-xs text-gray-700 uppercase bg-gray-100 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3 rounded-l-lg">
                    Information
                </th>
                <th scope="col" class="px-6 py-3"></th>
            </tr>
        </thead>
        <tbody>
            <tr class="bg-white dark:bg-gray-800 border-b-4">
                <th scope="row" class="px-6 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                    Total Number of Registered Faculty in the System 
                </th>
                <td class="py-4">
                    <b>{{facultyCount}}</b>
                </td>
            </tr>
        </tbody>
    </table>
</div>
<div class="grid grid-cols-3 gap-4">
  {{#each faculty}}
    <div class="flex flex-col items-center p-4 border border-gray-300 shadow-lg">
      <img
        class="w-20 h-20 mb-3 rounded-full shadow-lg"
        src="/img/user_avatar.png"
        alt="image"
      />
      <h5
        class="mb-1 text-xl font-medium text-gray-900 dark:text-white"
      >{{firstname}} {{lastname}}</h5>
      <span class="text-sm text-gray-500 dark:text-gray-400">{{email}}</span>
      <span class="text-sm text-gray-500 dark:text-gray-400">{{department}}</span>
    </div>
  {{/each}}
</div>
