<form action="/admin/departments" method="post" autocomplete="off">
    <input type="text" placeholder="Department" name="department" required>
    <input type="submit" value="Save">
</form>

<br><br>
<div>
    <h2>All Departments</h2>
    <hr>
    {{#each department}}    
        <li>{{this.name}}</li> 
    {{/each}}
</div>
<br><br>
<form action="/admin/departments/delete-all" method="post">
    <button type="submit">Clear All</button>
</form>